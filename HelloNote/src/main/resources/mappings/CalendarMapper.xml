<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="CalendarDAO">
  
  	<!-- 사용자가 캘린더에 등록한 일정 모두 조회 -->
  	<select id="getCalendarList" resultType="calendar"> <!-- 사용자 이름별로 테이블이 다르기 때문에 실제로 만들때는 사용자 아이디값 불러와서 테이블이름 앞에 추가 해줘야한다.  -->
  		SELECT CALENDAR_SEQ,
  			   concat(concat(to_char(START_DATE,'yyyy-mm-dd'),'T'),to_char(START_DATE,'hh24:mi')) AS START_DATE,
  			   concat(concat(to_char(END_DATE,'yyyy-mm-dd'),'T'),to_char(END_DATE,'hh24:mi')) AS END_DATE,
  			   TYPE,
  			   USER_NAME,
  			   BACKGROUND_COLOR,
  			   TEXT_COLOR,
  			   ALL_DAY,
  			   MENU_ID,
  			   DESCRIPTION
  	     FROM CALENDAR
  	
  	</select>
  	
  	<!-- 캘린더에 등록한 일정 삭제 -->
  	<delete id="deleteCalendar" parameterType="calendar">
  	  		
  	</delete>
  	
  	<!-- 캘린더에 일정 등록 -->
  	<insert id="insertCalendar" parameterType="calendar">
  	
  	</insert>
  	
  	<!-- 캘린더에 등록된 일정 수정 -->
  	<update id="updateCalendar" parameterType="calendar">
  	
  	</update>
  
  </mapper>